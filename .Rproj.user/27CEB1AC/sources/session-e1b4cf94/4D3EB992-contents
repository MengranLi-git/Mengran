[build]
  command = "npm install && hugo --gc --minify"
  publish = "public"

[build.environment]
  HUGO_VERSION = "0.126.0"
  HUGO_ENV = "production"
  NODE_VERSION = "18"
  TZ = "Europe/London"

[context]
  [context.branch-deploy]
    command = "hugo -F -b $DEPLOY_PRIME_URL"
  [context.deploy-preview]
    command = "hugo -F -b $DEPLOY_PRIME_URL"
  [context.production.environment]
    HUGO_ENV = "production"
